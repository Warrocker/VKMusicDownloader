<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vk_white">

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/audio_title_text"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/download_button"
        android:layout_width="wrap_content"
        android:textColor="@color/vk_black"/>

    <ImageButton
        android:text="download"
        android:background="@color/vk_white"
        android:src="@drawable/ic_button_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/download_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/duration_text_view" />

    <TextView
        android:text="artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artist_text_view"
        android:layout_below="@+id/audio_title_text"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/download_button"
        android:textSize="14sp"/>

    <TextView
        android:text="duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration_text_view"
        android:layout_below="@+id/artist_text_view"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/download_button"
        android:textSize="14sp"/>
</RelativeLayout>